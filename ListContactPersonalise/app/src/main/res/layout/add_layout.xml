<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="186dp"
        android:layout_height="233dp"
        app:srcCompat="@drawable/pika" />

    <EditText
        android:id="@+id/labelForName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:ems="3"
        android:inputType="none"
        android:enabled="false"
        android:text="Nom" />

    <EditText
        android:id="@+id/inputForName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelForName"
        />

    <EditText
        android:id="@+id/labelForNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputForName"
        android:ems="6"
        android:enabled="false"
        android:inputType="none"
        android:text="Numero" />

    <EditText
        android:id="@+id/inputForNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelForNumber"
        />

    <Button
        android:id="@+id/validPers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputForNumber"
        android:layout_centerHorizontal="true"
        android:onClick="onClickValid"
        android:text="Valider" />


</RelativeLayout>